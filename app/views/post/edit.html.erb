<%=form_for @post, url: {action: "update"} do |f| %>
<p>
 <p>
   <%= f.label :title %><br>
   <%= f.text_area :title %>
 </p>
 <p>
   <%= f.label :text %><br>
   <%= f.text_area :text %>
 </p>
   <%if @post.avatar.attached? %>
   <%= image_tag(@post.avatar, height: '320', width: '220') %> 
   <% end %><br>
   <%= f.submit %>
 </p>
 
<% end %>